<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans    
                        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    <!-- 创建目标类 -->
	<bean id="userID" class="com.n.Proxy_JDK2.UserServiceImpl1"></bean>
	<!-- 创建切面类 -->
	<bean id="myaspectID" class="com.n.Proxy_JDK2.MyAspect1"></bean>
	<!-- 创建代理类 -->
	<bean id="proxyuserID" class="org.springframework.aop.framework.ProxyFactoryBean">
	<property name="interfaces" value="com.n.Proxy_JDK2.UserService1"></property>
	<property name="target" ref="userID"></property>
	<property name="interceptorNames"  value="myaspectID"></property>
	<property name="optimize" value="true"></property>
	</bean>
</beans>  
