<?xml version="1.0" encoding="UTF-8"?>
<beans       xmlns="http://www.springframework.org/schema/beans"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans    
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
     
     <!-- 构造方法注入 
     constructor-arg  用于配置构造方法的一个参数arg
     name: 参数的名称
     value: 设置普通的数据
     ref: 引用数据，一般是另一个bean的 ID值
         例：
     <constructor-arg name="name" value="孙杰"></constructor-arg>
     <constructor-arg name="uid" value="666"></constructor-arg>
     
     index： 设置参数的索引号，从0开始,匹配到多个构造方法时，默认使用第一个
     type： 确定参数类型
         例：
     <constructor-arg index="0" type="java.lang.String" value="孙杰"></constructor-arg>
     <constructor-arg index="1" type="java.lang.Integer" value="666"></constructor-arg> 
     -->
     <bean id="userID" class="com.g.xmlConstuctor.User">
     	 <constructor-arg index="0" type="java.lang.String" value="孙杰"></constructor-arg>
     	 <constructor-arg index="1" type="java.lang.Integer" value="666"></constructor-arg> 
     </bean>
</beans>  